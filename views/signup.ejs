<%- include('./parts/header.ejs') %> <%- include('./parts/navbar.ejs') %>

<div class="container-sm text-center">
  <h3>Create an Account</h3>

  <form action="/signup" method="POST">
    <input type="text" name="username" class="form-control mb-3" placeholder="Enter your Username">
    <!--  Start Validation Error -->
    <% for (let error of validationErrors) { if (error.param === 'username') {%>
      <p class="alert alert-danger fw-bold"> <%= error.msg%></p>
      <%}}%>
    <!-- End Validation Error -->

    <input type="email" name="email" class="form-control mb-3" placeholder="Enter your Email ">
    <!--  Start Validation Error -->
    <% for (let error of validationErrors) { if (error.param === 'email') {%>
      <p class="alert alert-danger fw-bold"> <%= error.msg%></p>
      <%}}%>
    <!-- End Validation Error -->

    <input type="password" name="password" class="form-control mb-3" placeholder="Enter your password">
    <!--  Start Validation Error -->
    <% for (let error of validationErrors) { if (error.param === 'password') {%>
      <p class="alert alert-danger fw-bold"> <%= error.msg%></p>
      <%}}%>
    <!-- End Validation Error -->

    <input type="password" name="confirmpassword" class="form-control mb-3" placeholder="Confirm your password">
    <!--  Start Validation Error -->
    <% for (let error of validationErrors) { if (error.param === 'confirmpassword') {%>
      <p class="alert alert-danger fw-bold"> <%= error.msg%></p>
      <%}}%>
    <!-- End Validation Error -->

    <input type="submit" class="btn btn-primary" value="Create Account">
  </form>
  <br>
  <!-- Authentifacation Error -->
  <% if (authError) {%>
    <p class="alert alert-danger fw-bold"> <%= authError%></p>
    <%}%>
    
  <div>
    Already have an account? <a href="/login">Login</a>
  </div>
</div>


<%-include('./parts/footer.ejs') %>