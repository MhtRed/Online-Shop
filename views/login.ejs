<%- include('./parts/header.ejs') %> <%- include('./parts/navbar.ejs') %>

<div class="container-sm text-center">
  <h3>Login</h3>
  <form action="/login" method="POST">
    <input type="email" class="form-control mb-3" name="email" placeholder="Enter your Email" >
    <!--  Start Validation Error -->
    <% for (let error of validationErrors) { if (error.param === 'email') {%>
      <p class="alert alert-danger fw-bold"> <%= error.msg%></p>
      <%}}%>
    <!-- End Validation Error -->

    <input type="password" class="form-control mb-3" name="password" placeholder="Enter your password" >
    <!--  Start Validation Error -->
    <% for (let error of validationErrors) { if (error.param === 'password') {%>
      <p class="alert alert-danger fw-bold"> <%= error.msg%></p>
      <%}}%>
    <!-- End Validation Error -->

    <input type="submit" class="btn btn-primary" value="Login" >
  </form>
  <br>
  <% if (authError){ %>
      <p class="alert alert-danger fw-bold"> <%= authError%></p>
    <%}%>
  <div>
    Don't have an account? <a href="/signup">Create an Account</a>
  </div>
</div>

<%-include('./parts/footer.ejs') %>
